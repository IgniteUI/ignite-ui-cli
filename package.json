{
  "name": "ignite-ui-cli",
  "version": "0.0.1",
  "description": "CLI tool for creating Ignite UI projects",
  "keywords": [
    "CLI",
    "Ignite UI"
  ],
  "author": "Infragistics",
  "license": "MIT",
  "bin": {
    "ignite-ui": "bin/execute.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IgniteUI/ignite-ui-cli"
  },
  "bugs": {
    "url": "https://github.com/IgniteUI/ignite-ui-cli/issues"
  },
  "main": "lib/cli.js",
  "scripts": {
    "build": "node ./node_modules/typescript/lib/tsc.js",
    "build-pack": "node ./node_modules/typescript/lib/tsc.js -p tsconfig-pack.json",
    "pretest": "npm run lint && npm run build",
    "test": "nyc npm run jasmine",
    "jasmine": "jasmine spec/**/*.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test-debug": "node --debug-brk=5858 ./node_modules/jasmine/bin/jasmine.js spec/**/*.js",
    "lint": "tslint --project tsconfig.json"
  },
  "files": [
    "bin/*",
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "templates/**/*.d.ts",
    "templates/**/*.js",
	"templates/**/files/**/*",
	"templates/quickstart/**/*"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "lib/",
      "templates/"
    ],
    "exclude": [
      "**/*.d.ts",
      "output/",
      "templates/quickstart/",
      "templates/**/files/"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ],
    "instrument": true,
    "cache": false,
    "all": true
  },
  "dependencies": {
    "chalk": "^2.2.0",
    "fs-extra": "^3.0.1",
    "inquirer": "^3.1.1",
    "lite-server": "^2.3.0",
    "resolve": "^1.3.3",
    "shelljs": "^0.7.8",
    "through2": "^2.0.3",
    "yargs": "^8.0.2",
    "typescript": "^2.5.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^3.0.3",
    "@types/inquirer": "0.0.35",
    "@types/jasmine": "^2.5.54",
    "@types/node": "^8.0.5",
    "@types/shelljs": "^0.7.4",
    "coveralls": "^3.0.0",
    "jasmine": "^2.8.0",
    "nyc": "^11.3.0",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0"
  }
}
